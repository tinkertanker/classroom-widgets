{
  "name": "classroom-widgets",
  "version": "0.10.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/teacher",
    "packages/student",
    "packages/server"
  ],
  "scripts": {
    "dev": "cd packages/server && ./dev.sh",
    "dev:teacher": "npm run dev -w @classroom-widgets/teacher",
    "dev:server": "npm run dev -w @classroom-widgets/server",
    "dev:student": "npm run dev -w @classroom-widgets/student",
    "dev:all": "concurrently -n teacher,server,student -c blue,green,magenta \"npm run dev:teacher\" \"npm run dev:server\" \"npm run dev:student\"",
    "dev:concurrent": "npm run dev:all",
    "build": "npm run build -w @classroom-widgets/teacher",
    "build:student": "npm run build -w @classroom-widgets/student",
    "build:all": "npm run build && npm run build:student",
    "test": "npm run test -w @classroom-widgets/teacher",
    "generate:voice-types": "node scripts/generateVoiceCommandTypes.cjs",
    "prebuild": "npm run generate:voice-types",
    "server": "npm run start -w @classroom-widgets/server",
    "install:all": "npm install",
    "clean": "rm -rf node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
